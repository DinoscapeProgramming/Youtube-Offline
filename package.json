{
  "name": "youtube-offline",
  "productName": "Youtube Offline",
  "version": "1.0.0",
  "description": "A lightweight YouTube video downloader enabling offline viewing of your favorite content.",
  "main": "index.js",
  "keywords": [],
  "scripts": {
    "build": "electron-builder"
  },
  "author": "DinoscapeProgramming",
  "license": "ISC",
  "dependencies": {
    "moment": "^2.30.1",
    "ytdl-core": "^4.11.5",
    "ytdl-core-muxer": "^1.0.1",
    "ytpl": "^2.3.0"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "youtube-offline",
    "productName": "Youtube Offline",
    "target": "NSIS",
    "directories": {
      "output": "build"
    },
    "icon": "assets/favicon.ico",
    "nsis": {
      "installerIcon": "assets/favicon.ico",
      "installerHeaderIcon": "assets/favicon.ico",
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  }
}
